<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--pret Tree view-->
    <record id="hr_pret_tree_view" model="ir.ui.view">
        <field name="name">hr.pret.tree</field>
        <field name="model">hr.pret</field>
        <field name="arch" type="xml">
            <tree string="Demandes de Prêt">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="pret_amount"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!--pret Form view-->
    <record id="hr_pret_form_view" model="ir.ui.view">
        <field name="name">hr.pret.form</field>
        <field name="model">hr.pret</field>
        <field name="arch" type="xml">
            <form string="Demandes de Prêt">
                <header>
                    <button name="compute_installment" type="object" string="Calculer le Versement" class="oe_highlight"  attrs="{'invisible':[('state','in',('approve', 'refuse'))]}"/>
                    <button name="action_submit" type="object" string="Soumettre" states="draft" class="oe_highlight"/>
                    <button name="action_cancel" type="object" string="Annuler" states="draft" />
                    <button name="action_approve" type="object" string="Approuver" states="waiting_approval_1" class="oe_highlight" groups="hr.group_hr_manager,hr.group_hr_user"/>
                    <button name="action_refuse" type="object" string="Refuser" states="draft,waiting_approval_1" class="oe_highlight" groups="hr.group_hr_manager,hr.group_hr_user"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,waiting_approval_1,approve" />
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group col="4">
                        <field name="employee_id"/>
                        <field name="date"/>
                        <field name="department_id"/>
                        <field name="job_position"/>
                        <field name="pret_amount" attrs="{'readonly':[('state','=','approve')]}"/>
                        <field name="installment" attrs="{'readonly':[('state','=','approve')]}"/>
                        <field name="payment_date" attrs="{'readonly':[('state','=','approve')]}"/>
                        <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                        <field name="currency_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                    </group>
                    <notebook>
                        <page string="Versements">
                            <field name="pret_lines">
                                <tree string="Versements" editable="bottom">
                                    <field name="date"/>
                                    <field name="amount"/>
                                    <field name="paid" readonly="1" invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right" colspan="2" >
                                <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="total_paid_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="balance_amount" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <div class="oe_clear"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!--pret search view-->
    <record id="view_pret_request_search_form" model="ir.ui.view">
        <field name="name">hr.pret.search.form</field>
        <field name="model">hr.pret</field>
        <field name="arch" type="xml">
           <search string="Prêt">
               <filter string="Mes Demandes" name="myrequest" domain="[('employee_id.user_id.id', '=', uid)]" />
                <field name="employee_id" string="Employé(e)"/>
                <field name="department_id" string="Département"/>
                    <filter string="Employé(e)" name="employee_id" context="{'group_by':'employee_id'}"/>
                    <filter string="Département" name="department_id" context="{'group_by':'department_id'}"/>
                    <filter string="Statut" name="status" context="{'group_by':'state'}"/>
            </search>
        </field>
    </record>


    <!--pret menu-->
    <menuitem name="Prêts &amp; Avances"
        id="menu_hr_prets_and_advances" parent="hr.menu_hr_root"
        sequence="20"/>

    <record id="action_hr_pret_request" model="ir.actions.act_window">
        <field name="name">Demande de Prêt</field>
        <field name="res_model">hr.pret</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_myrequest': 1}</field>
        <field name="search_view_id" ref="view_pret_request_search_form"/>
         <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Cliquez pour créer une nouvelle demande de prêt.
            </p><p>
                Utilisez ce menu pour créer des demandes de prêt.
            </p>
        </field>
    </record>

    <menuitem name="Prêt"
        id="menu_base_hr_pret_request"
        parent = "menu_hr_prets_and_advances"
        sequence="1"/>

    <menuitem name="Demande de prêt"
        parent="menu_base_hr_pret_request"
        id="menu_hr_pret_request"
        action="action_hr_pret_request"/>

    <!-- Shortcuts -->
    <record id="act_hr_employee_pret_request" model="ir.actions.act_window">
        <field name="name">Prêts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.pret</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_mypret': 1}</field>
        <field name="view_id" eval="hr_pret_tree_view"/>
    </record>


    <!-- HR employee inherit prets -->
    <record id="view_employee_form_pret_inherit" model="ir.ui.view">
        <field name="name">hr.employee.pret.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="%(act_hr_employee_pret_request)d"
                    type="action"
                    class="oe_stat_button"
                    icon="fa-calendar"
                    groups="hr.group_hr_manager,hr.group_hr_user">
                    <field name="pret_count" widget="statinfo" string="Prêts"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
