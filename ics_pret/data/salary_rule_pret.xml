<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!--Adding a salary rule for pret-->
	<data noupdate="0">

		<record id="hr_rule_pret" model="hr.salary.rule">
            <field name="code">PRET</field>
            <field name="name">Pret</field>
            <field name="category_id" ref="hr_payroll_community.DED"/>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = inputs.PRET and - (inputs.PRET.amount)</field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="sequence" eval="190"/>
        </record>

        <record id="hr_rule_input_pret" model="hr.rule.input">
            <field name="code">PRET</field>
            <field name="name">Pret</field>
            <field name="input_id" ref="hr_rule_pret"/>
        </record>

	</data>
</odoo>
